<div id=<%="user-list-item-#{user.id}" %>>
  <%= link_to user_path(user) do %>
    <p class="user-name">名前：<%= user.name %></p>
    <p class="user-gender">性別：<%= user.gender %></p>
    <p class="user-age">年齢：<%= user.birthday %></p>
    <p class="user-cotegories">趣味：<% user.categories.each do |category| %>
      <%= category.category_name %>
    <% end %>
    </p>
    <p class="user-prefecture">居住エリア：<%= user.prefecture.name %></p>
  <% end %>
  <% if current_user.like_receivers.exists?(id:user.id) %>
    <button class="liked-button" value=<%= user.id %>>いいね済み</button>
  <% else %>
    <button class="like-button" value=<%= user.id %>>いいね</button>
  <% end %>
</div>
